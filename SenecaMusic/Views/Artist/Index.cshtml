@model IEnumerable<SenecaMusic.Controllers.ArtistBase>

@{
    ViewBag.Title = "Artist";
    var userAccount = new SenecaMusic.Controllers.UserAccount(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Artist List</h2>

<p>
    @if (userAccount.HasRoleClaim("Executive"))
    {
        @Html.ActionLink("Create New Artist", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            Artist photo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.UrlArtist)"><img src="@Html.DisplayFor(modelItem => item.UrlArtist)" style="width: 100px;" alt="" /></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthOrStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>