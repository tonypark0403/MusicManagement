@model SenecaMusic.Controllers.AlbumWithDetail

@{
    ViewBag.Title = "Album Details";
    var userAccount = new SenecaMusic.Controllers.UserAccount(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>Album Details - @Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
            <hr />
        </dd>

        <dt>
            Album cover art
        </dt>

        <dd>
            <img src="@Model.UrlAlbum" alt="" style="width: 150px;" />
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            <div class="panel panel-default panel-body">
                @Html.Raw(Model.Description)
            </div>
            <hr />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
    @if (userAccount.HasRoleClaim("Clerk"))
    {
        <span>|</span> @Html.ActionLink("Add track for this album", "Addtrack")
    }
</p>